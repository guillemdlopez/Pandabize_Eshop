<div class="row justify-content-center mt-4">
    <div class="col-md-6 shadow py-5 px-5 mb-5">
        <h2 class="mb-4">Add customizations</h2>
        <div class="new-customization-form"> 
            <%= simple_form_for(@customization) do |f|%>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.input :name, label: false, class: 'w-100 form-control', placeholder: 'Wheel size' %>
                </div>
                <div class="form-group">
                    <%= f.label :value %>
                    <%= f.input :value, label: false, placeholder: '16 inches' %>
                </div>
                <div class="form-group">
                    <%= f.label :price %>
                    <%= f.input :price, label: false, placeholder: '8.5' %>
                </div>
                <div class="form-group">
                    <%= f.label :bicycle_id %>
                    <%= f.input :bicycle_id, label: false, collection: Bicycle.all %>
                </div>
                <%= f.submit 'Add', class: 'btn btn-primary w-100' %>
            <% end %>
        </div>
    </div>
</div>