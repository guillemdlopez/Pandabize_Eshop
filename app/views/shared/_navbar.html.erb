<div class="navbar">
    <div class="container">
        <%= link_to root_path do %>
            <h3 class="mb-0 store-name">Pandabize</h3>
        <% end %>
        <div class="d-flex align-items-center">
            <ul class="inline-list mb-0">
                <li><%= link_to 'Dashboard', dashboard_path %></li>
