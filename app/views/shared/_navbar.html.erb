<div class="navbar">
    <div class="container">
        <%= link_to root_path do %>
            <h3 class="mb-0 store-name">Pandabize</h3>
        <% end %>
        <% if current_user %>
            <div class="d-flex align-items-center">
                <ul class="inline-list mb-0">
                    <li><%= link_to 'Dashboard', dashboard_path %></li>
                </ul>
                <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key, class: 'avatar-small' %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>